    "notes": [
        "Far Manager now supports Portable Mode! Please move the following directories:",
        "From \"$env:APPDATA\\Far Manager\" and \"$env:LOCALAPPDATA\\Far Manager\" to \"$env:USERPROFILE\\scoop\\persist\\far\""
    ],
    "homepage": "https://farmanager.com/",
    "description": "A text-mode files and archives manager.",
    "version": "30b5577",
    "architecture": {
        "64bit": {
            "url": "https://farmanager.com/files/Far30b5577.x64.20200327.7z",
            "hash": "060ce0f7e87d863462c3c45e8aacc85621b3556b0f977902f0888e515abdddf7"
        },
        "32bit": {
            "url": "https://farmanager.com/files/Far30b5577.x86.20200327.7z",
            "hash": "4441a8e043f418a37e4789f4a9675d575132b8d8ee609524dd65e40667db7de3"
        }
    },
    "persist": [
        "Profile",
        "Far.exe.ini"
    ],
    "pre_install": [
        "if (!(Test-Path \"$dir\\Far.exe.ini\")) {",
        "    (New-Item -Type File \"$dir\\Far.exe.ini\") | Out-Null",
        "}"
    ],
    "post_install": [
        "if ((Get-Item \"$dir\\Far.exe.ini\").Length -eq 0) {",
        "    (Copy-Item \"$dir\\Far.exe.example.ini\" \"$dir\\Far.exe.ini\") | Out-Null",
        "}",
        "(Get-Content -Path \"$dir\\Far.exe.ini\") -replace ';UseSystemProfiles=1', 'UseSystemProfiles=0' | Set-Content -Path \"$dir\\Far.exe.ini\""
    ],
    "checkver": {
        "url": "https://farmanager.com/download.php",
        "re": "files/Far(?<version>[b\\d]+).x64.(?<date>\\d+).7z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://farmanager.com/files/Far$version.x64.$matchDate.7z"
            },
            "32bit": {
                "url": "https://farmanager.com/files/Far$version.x86.$matchDate.7z"
            }
        }
    },
    "bin": "far.exe"
}
